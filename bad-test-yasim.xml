<?xml version="1.0" encoding="UTF-8"?>

<!-- Horten Ho IX - 2009 Emmanuel BARANGER

     sources      : http://fr.wikipedia.org/wiki/Horten_Ho_229

     Wingspan     : 16.76 m                           (   55 ft 0 in)
     Lenght       :  7.47 m                           (   24 ft 6 in)
     Height       :  2.81 m                           (    9 ft 2 in)
     Weight       :  4600 kg                          (   10141 lb )
     Engines      : 2 x Junkers Jumo 204              ( 2 x 2000 lbf )
     Speed Takeoff:  130 km/h                         (      70 kt )
     Speed cruise :  900 km/h                         (     486 kt )
     Speed Max    : 1000 km/h                         (     540 kt )
-->

<airplane mass="10141">

  <approach speed="70" aoa="1" fuel="0.5">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.2"/>
    <control-setting axis="/controls/flight/flaps" value="1"/>
    <control-setting axis="/controls/flight/spoilers" value="0.80"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
    <solve-weight idx="0" weight="170"/>
  </approach>

  <cruise speed="446" alt="12000" fuel="1.0">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="1"/>
    <control-setting axis="/controls/flight/flaps" value="0"/>
    <control-setting axis="/controls/gear/gear-down" value="0"/>
    <control-setting axis="/controls/flight/spoilers" value="0"/>
    <solve-weight idx="0" weight="170"/>
  </cruise>

  <cockpit x="2.422" y="0" z="1.095"/>

  <weight x="2.560" y="0" z="0.317" mass-prop="/yasim/me262/pilot-lb"/>

  <!-- Fuselage with engine on top -->
  <fuselage ax="3.742" ay="0" az="0.583" bx="-3.726" by="0" bz="0.583" width="0.724" taper="0.3" midpoint="0.4"/>

  <wing x="1.033" y="1.050" z="0.544"
        chord="4.011"
        length="7.353"
        taper="0.31"
        sweep="31"
        camber="0.01"
        twist="-3"
        incidence="0"
        dihedral="2">
        <stall aoa="25.0" width="8" peak="1.4"/>
        <flap0 start="0.452" end="1.0" lift="1.4" drag="1.3"/>
        <flap1 start="0.727" end="0.825" lift="1.01" drag="9.0"/>
        <spoiler start="0.727" end="0.825" lift="0.0" drag="6"/>

        <control-input axis="/controls/flight/aileron" control="FLAP0" split="true"/>
        <control-input axis="/controls/flight/rudder" control="FLAP1" split="true" invert="true"/>
        <control-input axis="/controls/flight/rudder-trim" control="FLAP1" split="true" invert="true"/>
        <!-- rudder-trim used for yaw stability via autopilot -->
        <control-input axis="/controls/flight/spoilers" control="SPOILER"/>

        <control-output control="FLAP0" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP0" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/rudder-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/rudder-pos-norm"/>
        <control-output control="SPOILER" side="left" prop="/surface-positions/left-spoiler-pos-norm"/>
        <control-output control="SPOILER" side="right" prop="/surface-positions/right-spoiler-pos-norm"/>

        <control-speed control="FLAP0" transition-time="0.5"/>
        <control-speed control="FLAP1" transition-time="0.5"/>
        <control-speed control="SPOILER" transition-time="1.5"/>
  </wing>

  <hstab x="1.033" y="1.050" z="0.544"
         chord="4.011" 
         length="7.353"
         taper="0.31"
         sweep="10.0" 
         camber="0.1"
         dihedral="2">
         <stall aoa="20.0" width="5" peak="1.5"/>
         <flap0 start="0.288" end="1" lift="1.4" drag="1.4"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/right-elevator-pos-norm"/>
         <control-output control="FLAP0" prop="/surface-positions/left-elevator-pos-norm"/>

         <control-speed control="FLAP0" transition-time="1.0"/>
         <control-speed control="INCIDENCE" transition-time="0.05"/>
  </hstab>

  <!-- mstab used for the beaver tail, glas(flaps control) used to pitch down the aircraft -->
  <mstab x="-1" y="0.0" z="-0.3"
         taper="0.3"
	 length="5"
         chord="5.0"
         sweep="-20.0">
         <stall aoa="25.0" width="5" peak="1.5"/>
         <flap0 start="0.075" end="0.452" lift="1.3" drag="1.3"/>

         <control-input axis="/controls/flight/flaps" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>

         <control-speed control="FLAP0" transition-time="1.5"/>
  </mstab>

  <!-- Engines   source            : http://fr.wikipedia.org/wiki/Horten_Ho_229

                 name              : Junkers Jumo 004
                 type              : turbojet engine
                 power             : 1984 lbf
                 weight            : 745 kg (1642 lb)
  -->
  <jet x="1.296" y="0.663" z="-0.559"
       n1-idle="30"
       n1-max="90" 
       n2-idle="35"
       n2-max="95"
       egt="850" 
       tsfc="1.39"
       mass="1642" 
       thrust="2000">
       <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
  </jet>

  <jet x="1.296" y="-0.663" z="-0.559"
       n1-idle="30"
       n1-max="90" 
       n2-idle="35"
       n2-max="95"
       egt="850"  
       tsfc="1.39"
       mass="1642"
       thrust="2000">
       <control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
  </jet>

  <!-- Undercarriage -->
  <!-- nose -->
  <gear x="2.355" y="0" z="-1.397"
        retract-time="7"
        compression="0.30"
        spring="1"
        damp="2" >
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1.0" src1="1.0" dst0="-0.1" dst1="0.1"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>

        <control-speed control="EXTEND" transition-time="7"/>
  </gear>

  <!-- left main -->
  <gear x="-0.908" y="1.599" z="-0.780"
        retract-time="7"
        compression="0.30"
        spring="1"
        damp="2" >

        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>

        <control-speed control="EXTEND" transition-time="7"/>
  </gear>

  <!-- right main -->
  <gear x="-0.908" y="-1.599" z="-0.780"
        retract-time="7"
        compression="0.30"
        spring="1"
        damp="2" >

        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>

        <control-speed control="EXTEND" transition-time="7"/>
  </gear>

  <!-- Internal tanks 3747 - 2 * 1873.5 liter wings -->
  <tank x="0.208" y="3.078" z="0.588" jet="true" capacity="1873.5"/>
  <tank x="0.208"  y="-3.078" z="0.588" jet="true" capacity="1873.5"/>

  <!-- CG Théorique x=1.033 y=0 z=0.540 -->
  <ballast x="8" y="0" z="-6" mass="1000"/>

</airplane>

