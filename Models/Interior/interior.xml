<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intcanope</object-name>
    <object-name>inttourcanope</object-name>
    <object-name>intcadre</object-name>
    <object-name>intcadrecanope</object-name>

    <!-- Objets transparents -->
    <object-name>intavantvitres</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intavantvitres</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intavantvitres</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Horten-Ho-IX/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.560 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.317 </z-m>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Horten-Ho-IX/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.292 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.765 </z-m>
      <roll-deg>      0 </roll-deg>
      <pitch-deg>   -18 </pitch-deg>
      <heading-deg>   0 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopyComplete</name>
    <object-name>intcadrecanope</object-name>
    <object-name>intvitres</object-name>
    <object-name>intcanope</object-name>
    <object-name>inttourcanope</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopyComplete</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 0.14 </dep></entry>
    </interpolation>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopyComplete</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 0.90 </dep></entry>
    </interpolation>
    <axis>
      <x>  1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

