<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>egt.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>panel1</object-name>
    <object-name>panel2</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>panel1</object-name>
    <object-name>panel2</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/engines/engine[0]/egt-degf</property>
    <interpolation>
      <entry><ind>    0 </ind><dep>  5.625 </dep></entry>
      <entry><ind>  180 </ind><dep> 11.250 </dep></entry>
      <entry><ind> 1080 </ind><dep> 67.500 </dep></entry>
      <entry><ind> 1260 </ind><dep> 78.750 </dep></entry>
      <entry><ind> 1620 </ind><dep> 85.000 </dep></entry>
      <entry><ind> 2500 </ind><dep> 90.000 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.001 </x-m>
      <y-m> 0.000 </y-m>
      <z-m>-0.012 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
