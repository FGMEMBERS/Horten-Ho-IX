<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <particlesystem>
    <name>smoke-slow</name>
    <texture>noise3.png</texture>
    
    <emissive>false</emissive>
    <lighting>true</lighting>
    
    <offsets>
      <x-m>  1.00 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -1 </z-m>
      <pitch-deg>-7.1</pitch-deg>
    </offsets>
    
    <condition>
      <and>
        <less-than>
          <!-- /position/altitude-ft -->
          <property>sim/multiplay/generic/float[3]</property>
          <value>13000</value>
        </less-than>
        <less-than>
          <property>/velocities/airspeed-kt</property>  
          <value>50</value>
        </less-than>
      </and>
      <not-equals>
        <property>sim/crashed</property>
        <value>true</value>
      </not-equals> 
    </condition>
    
    <attach>world</attach>
    
    <placer>
      <type>point</type>
    </placer>
    
    <shooter>
      <theta-min-deg>84</theta-min-deg>
      <theta-max-deg>86</theta-max-deg>
      <phi-min-deg>-10.5</phi-min-deg>
      <phi-max-deg>10.5</phi-max-deg>
      <speed-mps>
        <!-- engines/engine[0]/n1 -->
        <property>sim/multiplay/generic/float[4]</property>
        <factor>50</factor>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>
    
    <counter>
      <particles-per-sec>
        <!-- engines/engine[0]/oilt-norm -->
        <property>sim/multiplay/generic/float[16]</property>
        <factor>100</factor>
        <spread>20</spread>
      </particles-per-sec>
    </counter>
    
    <align>billboard</align>
    
    <particle>
      <start>
        <color>
          <red><value>   0.280 </value></red>
          <green><value> 0.270 </value></green>
          <blue><value>  0.250 </value></blue>
          <alpha><value> 0.032 </value></alpha>
        </color>
        <size>
          <value>0.5</value>
        </size>
      </start>
      
      <end>
        <color>
          <red><value>   0.95 </value></red>
          <green><value> 0.95 </value></green>
          <blue><value>  0.95 </value></blue>
          <alpha><value> 0.01 </value></alpha>
        </color>
        <size>
          <value>5</value>
        </size>
      </end>
      
      <life-sec>
        <value>3.0</value>
      </life-sec>
      
      <mass-kg>0.05</mass-kg>
      <radius-m>1.3</radius-m>
    </particle>
    
    <program>
      <fluid>   air  </fluid>
      <gravity> true </gravity>
      <wind>    true </wind>
    </program>
    
  </particlesystem>
  
</PropertyList>
