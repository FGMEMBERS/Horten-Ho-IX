<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>flammes.ac</path>
  
  <animation>
    <!-- Objets transparents -->
    <object-name>flamme3</object-name>
    
    <object-name>brule</object-name>
  </animation>
  
  <animation>
    <type>noshadow</type>
    <object-name>flamme3</object-name>
    
    <object-name>brule</object-name>
  </animation>
  
  <!-- Rotation des fleammes des rÃ©acteurs -->
  <animation>
    <type>spin</type>
    <object-name>flamme3</object-name>
    <!-- controls/engines/engine[1]/n2 -->
    <property>sim/multiplay/generic/float[7]</property>
    <factor> 800 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>flamme3</object-name>
    <condition>
      <and>
        <greater-than>
          <!-- controls/engines/engine[1]/throttle -->
          <property>sim/multiplay/generic/float[9]</property>
          <value>0.036</value>
        </greater-than>
        <or>
          <property>consumables/fuel/tank[0]/selected</property>
          <property>consumables/fuel/tank[1]/selected</property>
        </or> 
      </and>
      <not-equals>
        <property>sim/crashed</property>
        <value>true</value>
      </not-equals>   
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>flamme2</object-name>
    <condition>
      <greater-than>
        <!-- controls/engines/engine[1]/throttle -->
        <property>sim/multiplay/generic/float[9]</property>
        <value>10.9</value>
      </greater-than>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>flamme1</object-name>
    <condition>
      <greater-than>
        <!-- controls/engines/engine[1]/throttle -->
        <property>sim/multiplay/generic/float[9]</property>
        <value>10</value>
      </greater-than>
    </condition>
  </animation>
  
  <animation>
    <type>scale</type>
    <object-name>flamme3</object-name>
    <!-- controls/engines/engine[1]/throttle -->
    <property>sim/multiplay/generic/float[9]</property>
    <x-min>0.1</x-min>
    <y-min>0.8</y-min>
    <z-min>0.8</z-min>
    <x-factor>1.1</x-factor>
    <y-factor>0.2</y-factor>
    <z-factor>0.2</z-factor>
  </animation>
  
  <animation>
    <type>scale</type>
    <object-name>flamme3</object-name>
    <!-- /engines/engine[1]/oilt-norm -->
    <property>sim/multiplay/generic/float[17]</property>
    <x-min>0.12</x-min>
    <y-min>1</y-min>
    <z-min>1</z-min>
    <x-factor>1.1</x-factor>
    <y-factor>0.2</y-factor>
    <z-factor>0.2</z-factor>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>flamme3</object-name>
    <emission>
      <!-- controls/engines/engine[1]/throttle -->
      <factor-prop>sim/multiplay/generic/float[9]</factor-prop>
      <red>   3 </red>
      <green> 2 </green>
      <blue>  4 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>brule</object-name>
    <condition>
      <greater-than>
        <!-- /engines/engine[1]/oilt-norm -->
        <property>sim/multiplay/generic/float[17]</property>
        <value>0.042</value>
      </greater-than>
      <not-equals>
        <property>sim/crashed</property>
        <value>true</value>
      </not-equals>   
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>brule</object-name>
    <emission>
      <!-- /engines/engine[1]/oilt-norm -->
      <factor-prop>sim/multiplay/generic/float[17]</factor-prop>
      <red>   3 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>
  
</PropertyList>
