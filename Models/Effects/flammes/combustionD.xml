<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Based on EF2000 flame -->
<PropertyList>
  
  <path>combustion.ac</path>
  
  <animation>
    <object-name>ExternalFlame</object-name>
  </animation>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>ExternalFlame</object-name>   
  </effect>
  
  <animation>
    <type>select</type>
    <object-name>ExternalFlame</object-name>
    <condition>
      <and>
        <greater-than>
          <!-- controls/engines/engine[1]/throttle -->
          <property>sim/multiplay/generic/float[9]</property>
          <value>0.036</value>
        </greater-than>
        <or>
          <property>consumables/fuel/tank[0]/selected</property>
          <property>consumables/fuel/tank[1]/selected</property>
        </or> 
      </and>
      <not-equals>
        <property>sim/crashed</property>
        <value>true</value>
      </not-equals>   
    </condition>
  </animation>
  
  <animation>
    <type>scale</type>
    <object-name>ExternalFlame</object-name>
    <!-- controls/engines/engine[1]/throttle -->
    <property>sim/multiplay/generic/float[9]</property>
    <x-min>0.2</x-min>
    <y-min>0.9</y-min>
    <z-min>0.9</z-min>
    <x-factor>1.2</x-factor>
    <y-factor>0.28</y-factor>
    <z-factor>0.28</z-factor>
  </animation>
  
  <animation>
    <type>scale</type>
    <object-name>ExternalFlame</object-name>
    <!-- /engines/engine[1]/oilt-norm -->
    <property>sim/multiplay/generic/float[17]</property>
    <x-min>0.2</x-min>
    <y-min>1</y-min>
    <z-min>1</z-min>
    <x-factor>1.1</x-factor>
    <y-factor>0.28</y-factor>
    <z-factor>0.28</z-factor>
  </animation>
  
  <animation>
    <type>spin</type>
    <object-name>ExternalFlame</object-name>
    <!-- engines/engine[1]/n1 -->
    <property>sim/multiplay/generic/float[5]</property>
    <factor> 259 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>ExternalFlame</object-name>
    <emission>
      <!-- controls/engines/engine[1]/throttle -->
      <factor-prop>sim/multiplay/generic/float[9]</factor-prop>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>
  
</PropertyList>
