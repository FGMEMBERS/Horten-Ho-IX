<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim  include="Nasal/views.xml">
 
    <description>Horten Ho IX (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM)</author>
    <status>alpha</status>
  
    <fuel-fraction>1.0</fuel-fraction>
  
    <sound>
      <audible>true</audible>
      <path>Aircraft/Horten-Ho-IX/Sounds/ho-ix-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/Horten-Ho-IX/Models/ho-ix.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Horten-Ho-IX/Models/effects/guns/submodels.xml</path>
    </submodels>

    <startup>
     <splash-texture>Aircraft/Horten-Ho-IX/ho-ix-splash.png</splash-texture>
    </startup>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>      <!-- 9 strobe-lights -->
        <int n="10" alias="/controls/electric/key-pos">  0 </int>             <!-- 10 key position -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>  
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!-- 11 altitude for MP shadow -->
        <float n="6" alias="/engines/engine[0]/n1" />
        <float n="7" alias="/engines/engine[1]/n1" />
        <float n="8" alias="/controls/engines/engine[0]/throttle" />
        <float n="9" alias="/controls/engines/engine[1]/throttle" />
        <string n="0" type="string" />
        <string n="9" type="string" />                                        <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Horten Ho IX</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/ho-ix-menu.xml"/>

  </sim>
  
  <yasim>
    <ho-ix>
      <pilot-lb>128</pilot-lb>
    </ho-ix>
  </yasim>
  
  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <running>true</running>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">2070</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <controls>
    <armament>
     <trigger type="bool">false</trigger>
     <master-arm type="bool">true</master-arm>
     <position-norm type="int">1</position-norm>
    </armament>
  </controls>

  <input>
    <keyboard include="Nasal/ho-ix-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Horten-Ho-IX/Nasal/doors.nas</file>
    </doors>
    <hoix>
      <file>Aircraft/Horten-Ho-IX/Nasal/liveries.nas</file>
      <file>Aircraft/Horten-Ho-IX/Nasal/light.nas</file>
    </hoix>
    <guns>
      <file>Aircraft/Horten-Ho-IX/Nasal/weapons.nas</file>
      <file>Aircraft/Horten-Ho-IX/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>
